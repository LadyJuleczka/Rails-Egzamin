<p id="notice"><%= notice %></p>

<h1>Monsters</h1>

<table>
  <thead>
    <tr>
      <th>index</th>
      <th>Monster name</th>
      <th>Monser description</th>
      <th>Monser strenght</th>
      <th>Monser health</th>
      <th>Wid</th>
      <th>Lid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monsters.each_with_index do |monster, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= monster.mname %></td>
        <td><%= monster.mdesc %></td>
        <td><%= monster.mstrenght %></td>
        <td><%= monster.mhealth %></td>
        <td><%= monster.wid %></td>
        <td><%= monster.lid %></td>
        <td><%= link_to 'Show', monster %></td>
        <td><%= link_to 'Edit', edit_monster_path(monster) %></td>
        <td><%= link_to 'Destroy', monster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Clone', "monsters/#{monster.id}/clone" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

